{
  "name": "@juicedollar/jusd",
  "version": "1.0.17",
  "description": "JuiceDollar (JUSD) - Oracle-free, Bitcoin-collateralized stablecoin on Citrea. Decentralized minting with democratic governance.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "contracts/**/*.sol",
    "dist/",
    "exports/"
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "lint:sol": "solhint 'contracts/**/*.sol' && prettier -c \"contracts/**/*.sol\"",
    "lint:sol:fix": "prettier --write \"contracts/**/*.sol\"",
    "lint:test:fix": "prettier --write \"test/**/**.test.ts\"",
    "compile": "npx hardhat compile",
    "wallet": "npx ts-node helper/wallet.info.ts",
    "coverage": "npx hardhat coverage",
    "deploy": "npx hardhat run scripts/deployment/deploy/deployProtocol.ts",
    "deploy:network": "npx hardhat run scripts/deployment/deploy/deployProtocol.ts --network",
    "verify": "npx hardhat run scripts/verifyContracts.ts --network citrea",
    "build": "tsup",
    "ts:export:abis": "npx ts-node ./scripts/exportAbis.ts && prettier --write \"exports/abis/**/*.ts\"",
    "publish": "npm publish --access public",
    "cover": "nodejs ./solcover.js",
    "test": "npx hardhat test test/unit/*.ts",
    "deployPositions:network": "export deploymode=pos && npx hardhat deploy --network",
    "positions": "npx hardhat monitor-positions --network citrea --sort created",
    "contracts": "npx hardhat get-contracts",
    "monitor": "npx hardhat monitor-all --network citrea"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JuiceDollar"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JuiceDollar/issues"
  },
  "homepage": "https://github.com/JuiceDollar#readme",
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.5.1",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "prompt": "^1.3.0",
    "solhint": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.8",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/ignition-core": "^0.15.8",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.8",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "hardhat-deploy": "^1.0.4",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.7.0",
    "solidity-coverage": "^0.8.4",
    "tsc-watch": "^6.2.0",
    "tsup": "^8.3.0",
    "typechain": "^8.3.1",
    "viem": "^2.21.16"
  }
}
